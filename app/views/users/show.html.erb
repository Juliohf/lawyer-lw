<div class="container background_review">
  <% if @user.user_type == "lawyer" %>
    <div class= "showlawyer">
      <%= cl_image_tag @user.photo.key, class: "avatar-super" %>
      <h2> <%= @user.name %></h2>
      <p><%= @user.oab %></p>
      <p><%= @user.description %></p>
    </div>
    <div class= "row">
      <div class="col col-1">
        <i class="fa-solid fa-mobile-retro"></i>
      </div>
      <div class="col col-5">
        <p><%= @user.phone %></p>
      </div>
      <div class="col col-1">
        <i class="fa-solid fa-envelope"></i>
      </div>
      <div class="col col-5">
        <p><%= @user.email %></p>
      </div>
    </div>
    <p><%= @user.average_rating %></p>
    <div class= "d-flex justify-content-center">

      <% if current_user.chatrooms_as_client.where({lawyer_id: @user.id, client_id: current_user.id}).first.nil? %>
      <%= simple_form_for [@user, @chatroom] do |f| %>
        <%= f.submit %>
      <% end %>
    <%  else %>
      <% caminho = current_user.chatrooms_as_client.where({lawyer_id: @user.id, client_id: current_user.id}).first %>
        <%= link_to  chatroom_path(caminho) do %>
          <i class="fa-regular fa-message"></i>
        <% end %>
    <% end %>

    </div>
      <% if @user.user_type == "lawyer" %>
        <p><strong>Reviews</strong></p>
        <ul class="list-group">
          <% @user.reviews.each do |review| %>
            <li class="list-group-item"><%= review.comments %></li>
            <li class="list-group-item"><%= review.ratings %></li>
          <% end %>
        </ul>

        <%= simple_form_for [@user, @review] do |f| %>
          <%= f.input :comments %>
          <%= f.input :ratings %>
          <div class= "d-flex justify-content-center">
            <%= button_tag type: 'submit' , class: "message_button" do %>
              <i class="fa-solid fa-paper-plane"></i>
            <% end %>
          </div>
        <% end %>
      <% end %>
    <p><%= @user.average_rating %></p>

  <% else %>
     <div class= "showuser">
      <%= cl_image_tag @user.photo.key, class: "avatar-super" %>
      <p><%= @user.name %></p>
      <div class= "row">
        <div class="col col-1">
          <i class="fa-solid fa-mobile-retro"></i>
        </div>
        <div class="col col-5">
          <p><%= @user.phone %></p>
        </div>
        <div class="col col-1">
          <i class="fa-solid fa-envelope"></i>
        </div>
        <div class="col col-5">
          <p><%= @user.email %></p>
        </div>
    </div>
    <%end%>
</div>
