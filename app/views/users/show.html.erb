<div class="container background_review">
  <% if @user.user_type == "lawyer" %>
    <div class= "showlawyer">
      <%= cl_image_tag @user.photo.key, class: "avatar-super" %>
      <h2> <%= @user.name %></h2>
      <p><%= @user.oab %></p>
        <% @user.lawyer_categories.each do |lcategory|%>
          <div class="categories show btn border-dark px-2">
            <p>
              <%= lcategory.category.name %>
              <% if policy(lcategory).destroy? %>
              <%= link_to 'x', lawyer_category_path(lcategory), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'card-remove-icon' %>
              <% end %>
            </p>
          </div>
        <% end %>
      <p><%= @user.description %></p>
    </div>

    <div class= "row">
      <div class="col col-1">
        <i class="fa-solid fa-mobile-retro"></i>
      </div>
      <div class="col col-5">
        <p><%= @user.phone %></p>
      </div>
      <div class="col col-1">
        <i class="fa-solid fa-envelope"></i>
      </div>
      <div class="col col-5">
        <p><%= @user.email %></p>
      </div>
    </div>

    <p><%= @user.average_rating %></p>
    <div class= "d-flex justify-content-center">

      <% if current_user.chatrooms_as_client.where({lawyer_id: @user.id, client_id: current_user.id}).first.nil? %>
      <%= simple_form_for [@user, @chatroom] do |f| %>
        <%= f.submit %>
      <% end %>
    <%  else %>
      <div>
        <% caminho = current_user.chatrooms_as_client.where({lawyer_id: @user.id, client_id: current_user.id}).first %>
          <%= link_to  chatroom_path(caminho) do %>
            <i class="fa-solid fa-message"></i> Chat
          <% end %>
      </div>
    <% end %>
    </div>
      <% if @user.user_type == "lawyer" %>
        <p><strong>Reviews</strong></p>
        <ul class="list-group">
            <% @user.reviews.each do |review| %>
                <li class="list-group-item"><%= review.comments %></li>
                <li class="list-group-item"><%= review.ratings %></li>
            <% end %>
        </ul>

        <%= simple_form_for [@user, @review] do |f| %>
            <%= f.input :comments %>
            <%= f.input :ratings %>
              <div class= "d-flex justify-content-center">
                <%= button_tag type: 'submit' , class: "message_button" do %>
                  <i class="fa-solid fa-paper-plane"></i> Review
                <% end %>
              </div>
          <% end %>
        <% end %>

    <p><%= @user.average_rating %></p>

  <% else %>
     <div class= "showuser">
      <%= cl_image_tag @user.photo.key, class: "avatar-super" %>
      <p><%= @user.name %></p>
      <div class= "row">
        <div class="col col-1">
          <i class="fa-solid fa-mobile-retro"></i>
        </div>
        <div class="col col-5">
          <p><%= @user.phone %></p>
        </div>
        <div class="col col-1">
          <i class="fa-solid fa-envelope"></i>
        </div>
        <div class="col col-5">
          <p><%= @user.email %></p>
        </div>
      </div>
  <%end%>
  <div>
    <% if user_signed_in? && @user == current_user %>
      <div class="btn btn-light">
        <%= link_to "Add a Tag", new_lawyer_tag_path %>
      </div>
      <div class="btn btn-light">
        <%= link_to "Add a Category", new_lawyer_category_path %>
      </div>
    <% end %>
  </div>


  <% @user.lawyer_tags.each do |ltag|%>
    <div class="tags show btn px-2">
      <p>
        <%= ltag.tag.name %>
        <% if policy(ltag).destroy? %>
        <%= link_to 'x', lawyer_tag_path(ltag), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'card-remove-icon' %>
        <% end %>
      </p>
    </div>
  <% end %>
</div>
